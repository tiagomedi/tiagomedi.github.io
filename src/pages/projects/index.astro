---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectList from '../../components/ProjectList.astro';
import { projects } from './projects';

---

<BaseLayout
	title="Todos mis proyectos"
	description="Aquí encontrarás todos mis proyectos: trabajos reales, aportes a código abierto y creaciones personales."
>
  <div class='container'>
    <canvas id="cyber-particles" class="absolute inset-0 w-full h-full z-0"></canvas>
    <div class="mb-10 flex-1 space-y-5 animate-fadeIn">
      <h1 class="text-4xl font-extrabold mb-2 bg-gradient-to-r from-green-400 to-emerald-500 bg-clip-text text-transparent">Todos Mis Proyectos</h1>
      <p class="text-zinc-700 dark:text-zinc-300 text-lg">Aquí encontrarás todos mis proyectos: trabajos reales, aportes a código abierto y creaciones personales.</p>
    </div>
    <ProjectList projects={projects}/>
  </div>
</BaseLayout>

<style>
  /* ======= Estilos generales ======= */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
  }
  h1::after {
    content: "_";
    color: #22c55e;
    animation: blink 1.2s infinite;
  }
  @keyframes blink {
    50% { opacity: 0; }
  }

  /* ======= Canvas de partículas ======= */
  #cyber-particles {
    pointer-events: none;
    opacity: 0.3;
  }
</style>

<script>
  import { initCyberParticles } from '../../scripts/cyber-particles';
  initCyberParticles();
</script>
