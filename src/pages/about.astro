    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .info-placeholder.hidden {
