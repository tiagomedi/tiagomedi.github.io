<style>
  /* ======= Animaciones Base ======= */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes unlockBadge {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
  }

  /* ======= Canvas de part√≠culas ======= */
  #cyber-particles {
    pointer-events: none;
    opacity: 0.25;
  }

  /* ======= Stats Cards ======= */
  .stat-card {
    background: linear-gradient(135deg, rgba(234, 179, 8, 0.1), rgba(234, 179, 8, 0.05));
    border: 2px solid rgba(234, 179, 8, 0.3);
    border-radius: 1rem;
    padding: 1.5rem 1rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: rgba(234, 179, 8, 0.6);
    transform: translateY(-5px);
    box-shadow: 0 0 20px rgba(234, 179, 8, 0.3);
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #facc15, #eab308);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #9ca3af;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ======= Value Cards ======= */
  .value-card {
    background: linear-gradient(135deg, rgba(17, 24, 39, 0.8), rgba(31, 41, 55, 0.6));
    border: 2px solid rgba(234, 179, 8, 0.3);
    border-radius: 1.25rem;
    padding: 2.5rem 2rem;
    text-align: center;
    transition: all 0.4s ease;
    height: 100%;
  }

  .value-card:hover {
    border-color: rgba(234, 179, 8, 0.6);
    transform: translateY(-8px);
    box-shadow: 0 0 40px rgba(234, 179, 8, 0.4);
  }

  .value-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 0 15px rgba(234, 179, 8, 0.6));
    transition: all 0.3s ease;
  }

  .value-card:hover .value-icon {
    transform: scale(1.15);
    filter: drop-shadow(0 0 25px rgba(234, 179, 8, 0.8));
  }

  .value-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fbbf24;
    margin-bottom: 1rem;
  }

  .value-description {
    font-size: 1rem;
    color: #d1d5db;
    line-height: 1.7;
  }

  /* ======= Skills Graph ======= */
  .skills-graph-container {
    position: relative;
    width: 100%;
    max-width: 800px;
    height: 600px;
    margin: 0 auto;
    padding: 2rem;
  }

  .connection-lines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .connection-line {
    stroke: rgba(234, 179, 8, 0.2);
    stroke-width: 2;
    transition: all 0.3s ease;
  }

  .skill-node.active ~ .connection-lines .connection-line {
    stroke: rgba(234, 179, 8, 0.1);
  }

  .skill-node[data-skill="security"].active ~ .connection-lines .line-security,
  .skill-node[data-skill="frameworks"].active ~ .connection-lines .line-frameworks,
  .skill-node[data-skill="development"].active ~ .connection-lines .line-development,
  .skill-node[data-skill="infrastructure"].active ~ .connection-lines .line-infrastructure {
    stroke: rgba(234, 179, 8, 0.8);
    stroke-width: 3;
    filter: drop-shadow(0 0 8px rgba(234, 179, 8, 0.6));
  }

  /* Nodo Central */
  .central-node {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .central-node-content {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, rgba(234, 179, 8, 0.2), rgba(234, 179, 8, 0.1));
    border: 3px solid rgba(234, 179, 8, 0.6);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 30px rgba(234, 179, 8, 0.4);
    animation: pulse-central 3s ease-in-out infinite;
  }

  @keyframes pulse-central {
    0%, 100% {
      box-shadow: 0 0 30px rgba(234, 179, 8, 0.4);
      transform: scale(1);
    }
    50% {
      box-shadow: 0 0 50px rgba(234, 179, 8, 0.6);
      transform: scale(1.05);
    }
  }

  .central-icon {
    font-size: 3rem;
    filter: drop-shadow(0 0 10px rgba(234, 179, 8, 0.8));
  }

  .central-text {
    font-size: 1rem;
    font-weight: 700;
    color: #fbbf24;
    margin-top: 0.5rem;
  }

  /* Nodos de Habilidades */
  .skill-node {
    position: absolute;
    z-index: 5;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .skill-node[data-position="top-left"] {
    top: 10%;
    left: 15%;
  }

  .skill-node[data-position="top-right"] {
    top: 10%;
    right: 15%;
  }

  .skill-node[data-position="bottom-left"] {
    bottom: 10%;
    left: 15%;
  }

  .skill-node[data-position="bottom-right"] {
    bottom: 10%;
    right: 15%;
  }

  .node-circle {
    width: 90px;
    height: 90px;
    background: linear-gradient(135deg, rgba(17, 24, 39, 0.9), rgba(31, 41, 55, 0.7));
    border: 2px solid rgba(234, 179, 8, 0.4);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    position: relative;
  }

  .skill-node:hover .node-circle {
    border-color: rgba(234, 179, 8, 0.8);
    box-shadow: 0 0 30px rgba(234, 179, 8, 0.5);
    transform: scale(1.1);
  }

  .skill-node.active .node-circle {
