<script>
  import { initCyberParticles } from '../scripts/cyber-particles';
  
  initCyberParticles();

  // ======= Tech Stack Navbar Interaction =======
  document.addEventListener('DOMContentLoaded', () => {
    const navItems = document.querySelectorAll('.tech-nav-item') as NodeListOf<HTMLElement>;
    const techContents = document.querySelectorAll('.tech-content') as NodeListOf<HTMLElement>;

    navItems.forEach(navItem => {
      navItem.addEventListener('click', () => {
        const category = navItem.dataset.category;
        if (!category) return;

        // Remover active de todos los items
        navItems.forEach(item => item.classList.remove('active'));
        techContents.forEach(content => content.classList.remove('active'));

        // Activar el item seleccionado
        navItem.classList.add('active');

        // Mostrar el contenido correspondiente
        const targetContent = document.querySelector(`.tech-content[data-category="${category}"]`) as HTMLElement;
        if (targetContent) {
          targetContent.classList.add('active');
        }
      });
    });
  });

  // ======= Stack Layer Interaction =======
  document.addEventListener('DOMContentLoaded', () => {
    // Funci√≥n para inicializar interacci√≥n de capas en cualquier secci√≥n
    const initStackInteraction = (containerSelector: string) => {
      const containers = document.querySelectorAll(containerSelector) as NodeListOf<HTMLElement>;
      
      containers.forEach(container => {
        const layers = container.querySelectorAll('.layer') as NodeListOf<HTMLElement>;
        const layerInfos = container.querySelectorAll('.layer-info') as NodeListOf<HTMLElement>;
        const placeholder = container.querySelector('.info-placeholder') as HTMLElement;
        let activeLayer: string | null = null;

        layers.forEach(layer => {
          layer.addEventListener('click', () => {
            const layerName = layer.dataset.layer;
            if (!layerName) return;

            // Si ya est√° activa, la desactivamos
            if (activeLayer === layerName) {
              layer.classList.remove('active');
              layerInfos.forEach(info => info.classList.remove('active'));
              placeholder?.classList.remove('hidden');
              activeLayer = null;
              return;
            }

            // Desactivar todas las capas
            layers.forEach(l => l.classList.remove('active'));
            layerInfos.forEach(info => info.classList.remove('active'));

            // Activar la capa seleccionada
            layer.classList.add('active');
            activeLayer = layerName;

            // Ocultar placeholder y mostrar info correspondiente
            if (placeholder) {
              placeholder.classList.add('hidden');
            }
            const targetInfo = container.querySelector(`.layer-info[data-layer="${layerName}"]`) as HTMLElement;
            if (targetInfo) {
              setTimeout(() => {
                targetInfo.classList.add('active');
              }, 150);
            }
          });
        });
      });
    };

    // Inicializar para todas las secciones con stack-container
    initStackInteraction('.stack-container');
  });

  // ======= Funcionalidad del Modal de CV =======
  document.addEventListener('DOMContentLoaded', () => {
    const downloadBtn = document.getElementById('download-cv-btn');
    const modal = document.getElementById('cv-modal');
    const closeModalBtn = document.getElementById('close-modal-btn');
    const cancelBtn = document.getElementById('cancel-btn');
    const confirmBtn = document.getElementById('confirm-download-btn') as HTMLButtonElement;
    const consentCheckbox = document.getElementById('consent-checkbox') as HTMLInputElement;
    const modalOverlay = document.querySelector('.cv-modal-overlay');

    // Abrir modal
    downloadBtn?.addEventListener('click', () => {
      modal?.classList.remove('hidden');
      modal?.classList.add('active');
    });

    // Cerrar modal
    const closeModal = () => {
      modal?.classList.remove('active');
      setTimeout(() => {
        modal?.classList.add('hidden');
        if (consentCheckbox) consentCheckbox.checked = false;
        if (confirmBtn) confirmBtn.disabled = true;
      }, 300);
    };

    closeModalBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);
    modalOverlay?.addEventListener('click', closeModal);

    // Habilitar/deshabilitar bot√≥n de confirmaci√≥n
    consentCheckbox?.addEventListener('change', () => {
      if (confirmBtn) {
        confirmBtn.disabled = !consentCheckbox.checked;
      }
    });

    // Confirmar y descargar
    confirmBtn?.addEventListener('click', () => {
      if (consentCheckbox?.checked) {
        // Aqu√≠ va la l√≥gica de descarga
        // Reemplaza 'cv.pdf' con la ruta real de tu CV
        const link = document.createElement('a');
        link.href = '/cv.pdf'; // Aseg√∫rate de tener este archivo en /public/cv.pdf
        link.download = 'CV_Ignacio_Santiago_Medina.pdf';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);

        // Mensaje de √©xito (opcional)
        alert('‚úÖ Descarga iniciada. Gracias por tu inter√©s!');
        
        // Cerrar modal
        closeModal();
      }
    });

    // Cerrar modal con tecla ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.classList.contains('active')) {
        closeModal();
      }
    });
  });
