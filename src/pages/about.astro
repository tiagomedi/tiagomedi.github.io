<script>
  import { initCyberParticles } from '../scripts/cyber-particles';
  
  initCyberParticles();

  // ======= Stack Layer Interaction =======
  document.addEventListener('DOMContentLoaded', () => {
    const layers = document.querySelectorAll('.layer') as NodeListOf<HTMLElement>;
    const layerInfos = document.querySelectorAll('.layer-info') as NodeListOf<HTMLElement>;
    const placeholder = document.querySelector('.info-placeholder') as HTMLElement;
    let activeLayer: string | null = null;

    layers.forEach(layer => {
      layer.addEventListener('click', () => {
        const layerName = layer.dataset.layer;
        if (!layerName) return;

        // Si ya est√° activa, la desactivamos
        if (activeLayer === layerName) {
          layer.classList.remove('active');
          layerInfos.forEach(info => info.classList.remove('active'));
          placeholder.classList.remove('hidden');
          activeLayer = null;
          return;
        }

        // Desactivar todas las capas
        layers.forEach(l => l.classList.remove('active'));
        layerInfos.forEach(info => info.classList.remove('active'));

        // Activar la capa seleccionada
        layer.classList.add('active');
        activeLayer = layerName;

        // Ocultar placeholder y mostrar info correspondiente
        placeholder.classList.add('hidden');
        const targetInfo = document.querySelector(`.layer-info[data-layer="${layerName}"]`) as HTMLElement;
        if (targetInfo) {
          setTimeout(() => {
            targetInfo.classList.add('active');
          }, 150);
        }
      });
    });
  });

  // ======= Funcionalidad del Modal de CV =======
  document.addEventListener('DOMContentLoaded', () => {
    const downloadBtn = document.getElementById('download-cv-btn');
    const modal = document.getElementById('cv-modal');
    const closeModalBtn = document.getElementById('close-modal-btn');
    const cancelBtn = document.getElementById('cancel-btn');
    const confirmBtn = document.getElementById('confirm-download-btn') as HTMLButtonElement;
    const consentCheckbox = document.getElementById('consent-checkbox') as HTMLInputElement;
    const modalOverlay = document.querySelector('.cv-modal-overlay');

    // Abrir modal
    downloadBtn?.addEventListener('click', () => {
      modal?.classList.remove('hidden');
      modal?.classList.add('active');
    });

    // Cerrar modal
    const closeModal = () => {
      modal?.classList.remove('active');
      setTimeout(() => {
        modal?.classList.add('hidden');
        if (consentCheckbox) consentCheckbox.checked = false;
        if (confirmBtn) confirmBtn.disabled = true;
      }, 300);
    };

    closeModalBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);
    modalOverlay?.addEventListener('click', closeModal);

    // Habilitar/deshabilitar bot√≥n de confirmaci√≥n
    consentCheckbox?.addEventListener('change', () => {
      if (confirmBtn) {
        confirmBtn.disabled = !consentCheckbox.checked;
      }
    });

    // Confirmar y descargar
    confirmBtn?.addEventListener('click', () => {
      if (consentCheckbox?.checked) {
        // Aqu√≠ va la l√≥gica de descarga
        // Reemplaza 'cv.pdf' con la ruta real de tu CV
        const link = document.createElement('a');
        link.href = '/cv.pdf'; // Aseg√∫rate de tener este archivo en /public/cv.pdf
        link.download = 'CV_Ignacio_Santiago_Medina.pdf';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);

        // Mensaje de √©xito (opcional)
        alert('‚úÖ Descarga iniciada. Gracias por tu inter√©s!');
        
        // Cerrar modal
        closeModal();
      }
    });

    // Cerrar modal con tecla ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.classList.contains('active')) {
        closeModal();
      }
    });
  });
</script>