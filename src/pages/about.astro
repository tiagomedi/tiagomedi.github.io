  .skill-badge:nth-child(4) { animation-delay: 0.4s; }

  .skill-badge:hover {
    transform: translateY(-10px) scale(1.03);
    border-color: rgba(168, 85, 247, 0.7);
    box-shadow: 
      0 0 40px rgba(251, 191, 36, 0.3),
      0 0 70px rgba(168, 85, 247, 0.2);
  }

  .skill-icon {
    font-size: 3.5rem;
