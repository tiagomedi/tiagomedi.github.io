<style>
  /* ======= Animaciones Base ======= */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes unlockBadge {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
  }

  /* ======= Canvas de part√≠culas ======= */
  #cyber-particles {
    pointer-events: none;
    opacity: 0.25;
    position: fixed;
  }
  
  /* ======= Stats Cards ======= */
  .stat-card {
    background: linear-gradient(135deg, rgba(234, 179, 8, 0.1), rgba(234, 179, 8, 0.05));
    border: 2px solid rgba(234, 179, 8, 0.3);
    border-radius: 1rem;
    padding: 1.5rem 1rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: rgba(234, 179, 8, 0.6);
    transform: translateY(-5px);
    box-shadow: 0 0 20px rgba(234, 179, 8, 0.3);
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #facc15, #eab308);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #9ca3af;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ======= Value Cards ======= */
  .value-card {
    background: linear-gradient(135deg, rgba(17, 24, 39, 0.8), rgba(31, 41, 55, 0.6));
    border: 2px solid rgba(234, 179, 8, 0.3);
    border-radius: 1rem;
    padding: 2rem 1.5rem;
    text-align: center;
    transition: all 0.4s ease;
    height: 100%;
  }

  .value-card:hover {
    border-color: rgba(234, 179, 8, 0.6);
    transform: translateY(-8px);
    box-shadow: 0 0 40px rgba(234, 179, 8, 0.4);
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 15px rgba(234, 179, 8, 0.6));
    transition: all 0.3s ease;
  }

  .value-card:hover .value-icon {
    transform: scale(1.15);
    filter: drop-shadow(0 0 25px rgba(234, 179, 8, 0.8));
  }

  .value-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fbbf24;
    margin-bottom: 0.75rem;
  }

  .value-description {
    font-size: 0.95rem;
    color: #d1d5db;
    line-height: 1.6;
  }

  /* ======= Stack Model ======= */
  .stack-container {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2.5rem;
    max-width: 1100px;
    margin: 0 auto;
    align-items: start;
  }

  /* Pila de Capas (Izquierda) */
  .stack-layers {
    position: relative;
    perspective: 1000px;
  }

  .stack-title-wrapper {
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .stack-title {
    font-size: 1.1rem;
    font-weight: 800;
    color: #fbbf24;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: linear-gradient(135deg, rgba(234, 179, 8, 0.2), rgba(234, 179, 8, 0.1));
    border: 2px solid rgba(234, 179, 8, 0.5);
    border-radius: 0.5rem;
  }

  .layer-stack {
    display: flex;
    flex-direction: column;
    gap: 0;
    position: relative;
  }

  .layer {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.2rem 1rem;
    background: linear-gradient(135deg, rgba(17, 24, 39, 0.95), rgba(31, 41, 55, 0.9));
    border: 2px solid rgba(234, 179, 8, 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    min-height: 70px;
  }

  /* Efecto de apilamiento visual */
  .layer-top {
    border-radius: 0.75rem 0.75rem 0 0;
    z-index: 4;
    box-shadow: 
      0 3px 5px rgba(0, 0, 0, 0.1),
      0 0 15px rgba(234, 179, 8, 0.2);
  }

  .layer-middle-1 {
    margin-top: -2px;
    z-index: 3;
    box-shadow: 
      0 3px 5px rgba(0, 0, 0, 0.1),
      0 0 12px rgba(234, 179, 8, 0.15);
  }

  .layer-middle-2 {
    margin-top: -2px;
    z-index: 2;
    box-shadow: 
      0 3px 5px rgba(0, 0, 0, 0.1),
      0 0 10px rgba(234, 179, 8, 0.1);
  }

  .layer-bottom {
    border-radius: 0 0 0.75rem 0.75rem;
    margin-top: -2px;
    z-index: 1;
    box-shadow: 
      0 6px 12px rgba(0, 0, 0, 0.2),
      0 0 25px rgba(234, 179, 8, 0.25);
  }

  /* Efecto de brillo al fondo */
  .layer::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(234, 179, 8, 0.1) 50%, 
      transparent 100%);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .layer:hover::before {
    transform: translateX(100%);
  }

  .layer:hover {
    border-color: rgba(234, 179, 8, 0.7);
    background: linear-gradient(135deg, rgba(234, 179, 8, 0.2), rgba(234, 179, 8, 0.1));
    box-shadow: 
      0 6px 12px rgba(0, 0, 0, 0.2),
      0 0 30px rgba(234, 179, 8, 0.4),
      inset 0 0 25px rgba(234, 179, 8, 0.1);
  }

  .layer.active {
    border-color: rgba(234, 179, 8, 1);
    background: linear-gradient(135deg, rgba(234, 179, 8, 0.3), rgba(234, 179, 8, 0.15));
    box-shadow: 
      0 8px 16px rgba(0, 0, 0, 0.3),
      0 0 40px rgba(234, 179, 8, 0.6),
      inset 0 0 30px rgba(234, 179, 8, 0.15);
  }

  .layer.active::after {
    content: '‚óÄ';
    position: absolute;
    right: 1rem;
    font-size: 1.2rem;
    color: #fbbf24;
    animation: pulse-arrow 1.5s ease-in-out infinite;
