    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    z-index: 1;
  }

  .layer-icon {
    font-size: 1.8rem;
    filter: drop-shadow(0 0 12px rgba(234, 179, 8, 0.6));
    transition: all 0.3s ease;
  }

  .layer:hover .layer-icon,
  .layer.active .layer-icon {
    transform: scale(1.15) rotate(5deg);
    filter: drop-shadow(0 0 20px rgba(234, 179, 8, 0.9));
  }

  .layer-name {
    font-size: 0.95rem;
    font-weight: 800;
    color: #fbbf24;
    text-align: center;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

