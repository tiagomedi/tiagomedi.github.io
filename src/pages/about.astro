    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    z-index: 1;
  }

  .layer-icon {
    font-size: 1.8rem;
    filter: drop-shadow(0 0 12px rgba(234, 179, 8, 0.6));
    transition: all 0.3s ease;
  }

  .layer:hover .layer-icon,
  .layer.active .layer-icon {
    transform: scale(1.15) rotate(5deg);
    filter: drop-shadow(0 0 20px rgba(234, 179, 8, 0.9));
