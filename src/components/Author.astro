---
import { Image } from 'astro:assets';
import Ava from '@src/assets/img/ava.jpg';

type PicSize = 'sm' | 'md' | 'lg';
interface Props {
	picSize: PicSize;
}
const { picSize } = Astro.props;
---

<div class='flex gap-4 items-center leading-tight not-prose'>
	<a
		href='https://www.linkedin.com/in/santiagomedinad'
		target='_blank'
		rel='noopener noreferrer'
		class:list={[
			'rounded-full overflow-hidden shrink-0 border-2 border-green-400/50 hover:border-green-400 transition-all duration-300 hover:shadow-[0_0_15px_rgba(16,185,129,0.5)] hover:scale-105',
			{ 'w-12 h-12': picSize === 'sm' },
			{ 'w-[70px] h-[70px]': picSize === 'md' },
			{ 'w-[90px] h-[90px]': picSize === 'lg' }
		]}
	>
		<Image src={Ava} alt='Ignacio Santiago' />
	</a>
	<div>
		<div>
			<a
				href='https://www.linkedin.com/in/santiagomedinad'
				class='block font-bold bg-gradient-to-r from-green-400 to-emerald-500 bg-clip-text text-transparent hover:from-green-300 hover:to-emerald-400 transition-all duration-300'
				target='_blank'
				rel='noopener noreferrer'
			>
				Ignacio Santiago Medina
			</a>
		</div>
		<small class='avatar__subtitle text-xs font-mono text-gray-600 dark:text-gray-400'>
			<span class="text-green-300">$ </span>→ <span class="text-emerald-300">Ing. Civil Informática y Telec. | Ciberseguridad</span>
		</small>
	</div>
</div>
